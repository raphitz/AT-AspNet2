@model IEnumerable<AT_AspNet.Domain.Autor>

@{
    ViewBag.Title = "AdicionarAutores";
}

<h2>AdicionarAutores</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sobrenome)
        </td>
        <td>
            @Html.ActionLink("Adicionar autor", "FazRelacionamento", new { id=item.AutorId }) |
        </td>
    </tr>
}

</table>
